<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CityPulse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CityPulse.styles.css" asp-append-version="true" />

    <!-- Leaflet  -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.css" />
    <script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/images/CityPulse.png" alt="CityPulse Logo" class="navbar-logo me-2">
                    CityPulse
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav w-100 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="servicesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Services
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="servicesDropdown">
                                <li>
                                    <a class="dropdown-item" href="#" onclick="checkLoginAndRedirect('/ReportIssues/Create'); return false;">Report an Issue</a>
                                </li>
                                <li>
                                    <a class="dropdown-item disabled" href="#" tabindex="-1" aria-disabled="true">Service Request Status (Soon)</a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Privacy & Policies</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="communityDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Community
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="communityDropdown">
                                <li>
                                    <a class="dropdown-item" href="#" onclick="checkLoginAndRedirect('/News/News'); return false;">News & Announcements</a>
                                </li>
                                <li>
                                    <a class="dropdown-item disabled" href="#" tabindex="-1" aria-disabled="true">Events Calendar (Soon)</a>
                                </li>
                                <li>
                                    <a class="dropdown-item disabled" href="#" tabindex="-1" aria-disabled="true">Community Programs (Soon)</a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto d-flex flex-row align-items-center gap-1">
                        <!-- Notifications -->
                        <li class="nav-item">
                            <a class="btn btn-sm btn-outline-dark rounded-circle p-0 d-flex align-items-center justify-content-center bg-white text-dark" 
                               href="#" 
                               title="Notifications"
                               style="width: 28px; height: 28px; position: relative; border-width: 1px;">
                                <i class="bi bi-bell text-dark" style="font-size: 0.85rem;"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.5rem; padding: 2px 4px;">
                                    3
                                </span>
                            </a>
                        </li>

                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <!-- User Profile Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="btn btn-sm btn-outline-dark rounded-pill d-flex align-items-center gap-1 px-2 py-1 dropdown-toggle bg-white text-dark" 
                                   href="#" 
                                   id="userDropdown" 
                                   role="button" 
                                   data-bs-toggle="dropdown"
                                   style="border-width: 1px; font-size: 0.8rem;">
                                    <i class="bi bi-person-circle text-dark" style="font-size: 0.9rem;"></i>
                                    <span>@Context.Session.GetString("Username")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm" style="border-radius: 8px; min-width: 160px; font-size: 0.85rem;">
                                    <li>
                                        <div class="dropdown-header" style="font-size: 0.8rem;">
                                            <i class="bi bi-person-badge me-1"></i>
                                            @Context.Session.GetString("UserFullName")
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="#" onclick="logoutUser(); return false;">
                                            <i class="bi bi-box-arrow-right me-2"></i>
                                            Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <!-- Login Button -->
                            <li class="nav-item">
                                <a class="btn btn-sm btn-outline-dark rounded-pill px-2 py-1 d-flex align-items-center gap-1 bg-white text-dark" 
                                   href="#" 
                                   onclick="showLoginModal(); return false;" 
                                   title="Login"
                                   style="border-width: 1px; font-size: 0.8rem;">
                                    <i class="bi bi-person-circle text-dark" style="font-size: 0.9rem;"></i>
                                    <span>Login</span>
                                </a>
                            </li>
                        }

                        <!-- Admin Link -->
                        <li class="nav-item">
                            <a class="btn btn-sm btn-outline-dark rounded-pill px-2 py-1 d-flex align-items-center gap-1 bg-white text-dark" 
                               asp-controller="Admin" 
                               asp-action="Login" 
                               title="Admin Portal"
                               style="border-width: 1px; font-size: 0.8rem;">
                                <i class="bi bi-shield-lock text-dark" style="font-size: 0.85rem;"></i>
                                <span>Admin</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer text-center py-3">
        &copy; 2025 CityPulse Municipal Services. All rights reserved.
    </footer>

    <!-- Login/Register Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border-radius: 15px;">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold" id="modalTitle">Welcome to CityPulse</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <!-- Login Form -->
                    <div id="loginForm">
                        <div class="text-center mb-3">
                            <img src="/images/CityPulse.png" alt="CityPulse" style="height: 50px;">
                            <p class="text-muted mt-2">Login to save your preferences and track your reports</p>
                        </div>
                        <div class="alert alert-danger d-none" id="loginError"></div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Username or Email</label>
                            <input type="text" class="form-control" id="loginUsername" placeholder="Enter username or email" style="border-radius: 15px; padding: 0.6rem;" required minlength="3">
                            <div class="invalid-feedback">Username must be at least 3 characters</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Password</label>
                            <input type="password" class="form-control" id="loginPassword" placeholder="Enter password" style="border-radius: 15px; padding: 0.6rem;" required minlength="6">
                            <div class="invalid-feedback">Password must be at least 6 characters</div>
                        </div>
                        <button type="button" class="btn btn-dark w-100 mb-2" onclick="loginUser()" style="border-radius: 15px;">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </button>
                        <button type="button" class="btn btn-outline-dark w-100" onclick="showRegisterForm()" style="border-radius: 15px;">
                            Don't have an account? Register
                        </button>
                    </div>

                    <!-- Register Form -->
                    <div id="registerForm" class="d-none">
                        <div class="text-center mb-3">
                            <img src="/images/CityPulse.png" alt="CityPulse" style="height: 50px;">
                            <p class="text-muted mt-2">Create your free account</p>
                        </div>
                        <div class="alert alert-danger d-none" id="registerError"></div>
                        <div class="row">
                            <div class="col-6 mb-2">
                                <label class="form-label fw-semibold">First Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="regFirstName" placeholder="John" style="border-radius: 15px; padding: 0.6rem;" required minlength="2">
                                <div class="invalid-feedback">Min 2 characters, letters only</div>
                            </div>
                            <div class="col-6 mb-2">
                                <label class="form-label fw-semibold">Last Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="regLastName" placeholder="Doe" style="border-radius: 15px; padding: 0.6rem;" required minlength="2">
                                <div class="invalid-feedback">Min 2 characters, letters only</div>
                            </div>
                        </div>
                        <div class="mb-2">
                            <label class="form-label fw-semibold">Username <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="regUsername" placeholder="Choose username (3-50 chars)" style="border-radius: 15px; padding: 0.6rem;" required minlength="3" maxlength="50" pattern="[a-zA-Z0-9_]+">
                            <div class="invalid-feedback">3-50 characters, letters/numbers/underscore only</div>
                        </div>
                        <div class="mb-2">
                            <label class="form-label fw-semibold">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="regEmail" placeholder="you@example.com" style="border-radius: 15px; padding: 0.6rem;" required>
                            <div class="invalid-feedback">Please enter a valid email address</div>
                        </div>
                        <div class="mb-2">
                            <label class="form-label fw-semibold">Password <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" id="regPassword" placeholder="Min 6 chars (A-Z, a-z, 0-9)" style="border-radius: 15px; padding: 0.6rem;" required minlength="6" maxlength="100">
                            <div class="invalid-feedback">6-100 chars: uppercase, lowercase, and number required</div>
                            <div class="form-text small">
                                <i class="bi bi-info-circle"></i> Must include: uppercase, lowercase, number
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Confirm Password <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" id="regConfirmPassword" placeholder="Re-enter password" style="border-radius: 15px; padding: 0.6rem;" required>
                            <div class="invalid-feedback">Passwords must match</div>
                        </div>
                        <button type="button" class="btn btn-dark w-100 mb-2" onclick="registerUser()" style="border-radius: 15px;">
                            <i class="bi bi-person-plus"></i> Create Account
                        </button>
                        <button type="button" class="btn btn-outline-dark w-100" onclick="showLoginForm()" style="border-radius: 15px;">
                            Already have an account? Login
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>