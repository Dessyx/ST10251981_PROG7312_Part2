@model CityPulse.Models.AdminLoginViewModel
@{
    ViewData["Title"] = "Admin Login";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login - CityPulse</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/admin-login.css">
</head>
<body>
    <div class="admin-login-container" style="display: flex; justify-content: center; align-items: center; min-height: 100vh;">
        <div class="admin-form-container" style="width: 400px;">
            <div class="admin-form">
                <!-- Header -->
                <div class="text-center" style="margin-bottom: 20px;">
                    <div class="d-flex justify-content-center" style="margin-bottom: 15px;">
                        <img src="/images/Profile.png" alt="Admin" class="rounded-circle" style="width: 60px; height: 60px;">
                    </div>
                    <h1 style="margin-bottom: 8px;">Login</h1>
                    <div class="demo-credentials" style="margin: 0;">
                        <p style="color: #666; font-size: 14px; margin: 0;">Access the CityPulse administration panel</p>
                    </div>
                </div>

                <!-- Login Form -->
                <form asp-action="Login" method="post" style="width: 100%;">
                    <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>
                    
                    <div class="form-group">
                        <label asp-for="Username">
                            <i class="fas fa-user me-2"></i>Username
                        </label>
                        <input asp-for="Username" placeholder="Enter your username" />
                        <span asp-validation-for="Username" class="field-validation-error"></span>
                    </div>

                    <div class="form-group" style="margin-bottom: 10px;">
                        <label asp-for="Password">
                            <i class="fas fa-lock me-2"></i>Password
                        </label>
                        <input asp-for="Password" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="field-validation-error"></span>
                    </div>

                    <button type="submit" style="margin-top: 10px;">
                        <i class="fas fa-sign-in-alt me-2"></i>Sign In
                    </button>
                </form>


                <!-- Back to Home -->
                <div class="back-link">
                    <a asp-controller="Home" asp-action="Index">
                        <i class="fas fa-arrow-left me-1"></i>Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>