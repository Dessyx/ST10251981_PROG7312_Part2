@model CityPulse.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 fw-bold text-primary">
                        <i class="bi bi-speedometer2 me-2"></i>Admin Dashboard
                    </h1>
                    <p class="text-muted">Manage announcements and monitor system activity</p>
                </div>
                <div>
                    <a asp-action="AddAnnouncement" class="btn btn-primary me-2">
                        <i class="bi bi-plus-circle me-1"></i>Add Announcement
                    </a>
                    <a asp-action="Logout" class="btn btn-outline-secondary">
                        <i class="bi bi-box-arrow-right me-1"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title text-white-50">Total Announcements</h6>
                            <h2 class="fw-bold">@Model.TotalAnnouncements</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-newspaper display-4 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-3">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title text-white-50">Active Events</h6>
                            <h2 class="fw-bold">@Model.RecentAnnouncements.Count(a => a.Category == CityPulse.Models.AnnouncementCategory.Event)</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-calendar-event display-4 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-3">
            <div class="card bg-warning text-dark shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title text-dark-50">Service Updates</h6>
                            <h2 class="fw-bold">@Model.RecentAnnouncements.Count(a => a.Category == CityPulse.Models.AnnouncementCategory.ServiceUpdate)</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-tools display-4 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-3">
            <div class="card bg-danger text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title text-white-50">Emergency Alerts</h6>
                            <h2 class="fw-bold">@Model.RecentAnnouncements.Count(a => a.Category == CityPulse.Models.AnnouncementCategory.Emergency)</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-exclamation-triangle display-4 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Announcements -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>Recent Announcements
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentAnnouncements.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Category</th>
                                        <th>Date</th>
                                        <th>Priority</th>
                                        <th>Featured</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var announcement in Model.RecentAnnouncements)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@announcement.Title</strong>
                                                @if (announcement.IsFeatured)
                                                {
                                                    <span class="badge bg-warning ms-2">Featured</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @GetCategoryBadgeClass(announcement.Category)">
                                                    @announcement.Category
                                                </span>
                                            </td>
                                            <td>@announcement.Date.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span class="badge @GetPriorityBadgeClass(announcement.Priority)">
                                                    @announcement.Priority
                                                </span>
                                            </td>
                                            <td>
                                                @if (announcement.IsFeatured)
                                                {
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star text-muted"></i>
                                                }
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-secondary" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h5 class="mt-3">No announcements yet</h5>
                            <p class="text-muted">Start by adding your first announcement.</p>
                            <a asp-action="AddAnnouncement" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-1"></i>Add Announcement
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetCategoryBadgeClass(CityPulse.Models.AnnouncementCategory category)
    {
        return category switch
        {
            CityPulse.Models.AnnouncementCategory.Announcement => "bg-primary",
            CityPulse.Models.AnnouncementCategory.Event => "bg-info",
            CityPulse.Models.AnnouncementCategory.ServiceUpdate => "bg-success",
            CityPulse.Models.AnnouncementCategory.Notice => "bg-warning",
            CityPulse.Models.AnnouncementCategory.Program => "bg-secondary",
            CityPulse.Models.AnnouncementCategory.Emergency => "bg-danger",
            _ => "bg-secondary"
        };
    }

    string GetPriorityBadgeClass(CityPulse.Models.AnnouncementPriority priority)
    {
        return priority switch
        {
            CityPulse.Models.AnnouncementPriority.Critical => "bg-danger",
            CityPulse.Models.AnnouncementPriority.High => "bg-warning",
            CityPulse.Models.AnnouncementPriority.Normal => "bg-primary",
            CityPulse.Models.AnnouncementPriority.Low => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}
