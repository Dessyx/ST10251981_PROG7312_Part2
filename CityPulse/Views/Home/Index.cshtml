@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid px-0">
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner hero-carousel">
            <div class="carousel-item active">
                <img src="/images/CapeTown.webp" class="d-block w-100" alt="City view 1" title="City view of Cape Town" />
                <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                    <h1 class="display-5 fw-bold text-shadow" title="Welcome to CityPulse Municipal Services">CityPulse Municipal Services</h1>
                    <p class="lead text-shadow" title="Engage with your city and report issues">Engage. Report. Improve.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/SA.webp" class="d-block w-100" alt="City view 2" title="City view of South Africa" />
                <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                    <h1 class="display-5 fw-bold text-shadow">CityPulse Municipal Services</h1>
                    <p class="lead text-shadow" title="Your voice matters">Your city, your voice.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/Beach.webp" class="d-block w-100" alt="City view 3" title="City view at the beach" />
                <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                    <h1 class="display-5 fw-bold text-shadow">CityPulse Municipal Services</h1>
                    <p class="lead text-shadow" title="Together we improve the city">Together we make it better.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<div class="container py-4">
    <h2 title="Overview of municipal services">Services Offered</h2>
    <div class="row g-4">
        <div class="col-12 col-md-4">
            <div class="feature-panel h-100" title="Stay informed about municipal notices">
                <div class="feature-header" title="Public notices and announcements">PUBLIC NOTICES</div>
                <div class="feature-body">
                    <p>
                        Stay informed about official municipal notices, regulations, and announcements.
                        Access important information that affects your community.
                    </p>
                    <a href="#" class="btn btn-primary hover-lift" onclick="checkLoginAndRedirect('/ReportIssues/Create'); return false;" title="Report a municipal issue">Report Issues</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="feature-panel h-100" title="Latest news from the municipality">
                <div class="feature-header">LATEST NEWS</div>
                <div class="feature-body">
                    <p>
                        Stay updated with community events, municipal programs, and city announcements.
                        Never miss important news happening in your area.
                    </p>
                    <a href="#" class="btn btn-primary hover-lift" onclick="checkLoginAndRedirect('/News/News'); return false;" title="View latest news and announcements">View News</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="feature-panel h-100" title="Track your service requests">
                <div class="feature-header">SERVICE REQUEST STATUS</div>
                <div class="feature-body">
                    <p>
                        Track the progress of your requests and see real-time updates.
                        Know exactly when your issue is being handled.
                    </p>
                    <button class="btn btn-secondary" disabled title="Feature coming soon">Coming Soon</button>
                </div>
            </div>
        </div>
    </div>
</div>

<hr class="my-4" />
<div class="row g-4">
    <div class="col-12 col-lg-4">
        <h2 class="h4 mb-3" title="Important contacts for emergencies and municipal services">Important Municipal Contacts</h2>
        <div class="list-group contact-list">
            <div class="list-group-item" title="Emergency Police, Fire, Medical">
                <strong>Emergency Services</strong>
                <div class="small text-muted">Police/Fire/Medical</div>
                <a href="tel:10111" class="btn btn-outline-primary mt-2" title="Call emergency services">10111</a>
            </div>
            <div class="list-group-item" title="National ambulance service">
                <strong>Ambulance</strong>
                <div class="small text-muted">National Ambulance Number</div>
                <a href="tel:10177" class="btn btn-outline-primary mt-2" title="Call ambulance services">10177</a>
            </div>
            <div class="list-group-item" title="Municipal call centre for general enquiries">
                <strong>Municipal Call Centre</strong>
                <div class="small text-muted">General service enquiries</div>
                <a href="tel:0800111111" class="btn btn-outline-primary mt-2" title="Call municipal call centre">0800 111 111</a>
            </div>
            <div class="list-group-item" title="Electricity faults and outages">
                <strong>Electricity Faults</strong>
                <div class="small text-muted">Report outages and faults</div>
                <a href="tel:0860037566" class="btn btn-outline-primary mt-2" title="Call electricity faults">0860 037 566</a>
            </div>
            <div class="list-group-item" title="Water leaks and sanitation issues">
                <strong>Water & Sanitation</strong>
                <div class="small text-muted">Leaks, sanitation issues</div>
                <a href="tel:0860103089" class="btn btn-outline-primary mt-2" title="Call water and sanitation">0860 103 089</a>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-8">
        <h2 class="h4 mb-3" title="Statistics on reported issues">Report Statistics</h2>
        <canvas id="reportChart" height="300"></canvas>

        <h3 class="h5 mt-4" title="Community feedback">Comments from your community</h3>
        <ul class="list-group user-comments">
            <li class="list-group-item" title="Positive user feedback">“Very responsive service, thank you!”</li>
            <li class="list-group-item" title="Issue resolved quickly">“Issue resolved quickly in my area.”</li>
            <li class="list-group-item" title="Easy online submission">“Love how easy it is to submit reports online.”</li>
        </ul>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/home.js" asp-append-version="true"></script>
}

