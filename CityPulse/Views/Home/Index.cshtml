@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid px-0">
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner hero-carousel">
            <div class="carousel-item active">
                <img src="/images/CapeTown.webp" class="d-block w-100" alt="City view 1" /> @* Image from (The Official Home of Formula E, 2023) *@
                <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                    <h1 class="display-5 fw-bold text-shadow">CityPulse Municipal Services</h1>
                    <p class="lead text-shadow">Engage. Report. Improve.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/SA.webp" class="d-block w-100" alt="City view 2" />  @* Image from (Rooibos Council - South Africa, 2025.) *@
                <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                    <h1 class="display-5 fw-bold text-shadow">CityPulse Municipal Services</h1>
                    <p class="lead text-shadow">Your city, your voice.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/Beach.webp" class="d-block w-100" alt="City view 3" /> @* Image from (Greatvaluevacations.com, 2023) *@
                <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                    <h1 class="display-5 fw-bold text-shadow">CityPulse Municipal Services</h1>
                    <p class="lead text-shadow">Together we make it better.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<div class="container py-4">
    <div class="row g-4">
        <div class="col-12 col-md-4">
            <div class="feature-panel h-100">
                <div class="feature-header">PUBLIC NOTICES</div>
                <div class="feature-body">
                    <p>
                        Stay informed about official municipal notices, regulations, and announcements.
                        Access important information that affects your community.
                    </p>
                    <a class="btn btn-primary" asp-controller="ReportIssues" asp-action="Create">Report Issues</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="feature-panel h-100">
                <div class="feature-header">LATEST NEWS</div>
                <div class="feature-body">
                    <p>
                        Stay updated with community events, municipal programs, and city announcements.
                        Never miss important news happening in your area.
                    </p>
                    <button class="btn btn-secondary" disabled>Coming Soon</button>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="feature-panel h-100">
                <div class="feature-header">SERVICE REQUEST STATUS</div>
                <div class="feature-body">
                    <p>
                        Track the progress of your requests and see real-time updates.
                        Know exactly when your issue is being handled.
                    </p>
                    <button class="btn btn-secondary" disabled>Coming Soon</button>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-4" />
    <div class="row g-3">
        <div class="col-12 col-lg-8">
            <h2 class="h4">Important Municipal Contacts</h2>
            <div class="list-group">
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Emergency Services</strong>
                        <div class="small text-muted">Police/Fire/Medical</div>
                    </div>
                    <a href="tel:10111" class="btn btn-outline-primary">10111</a>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Ambulance</strong>
                        <div class="small text-muted">National Ambulance Number</div>
                    </div>
                    <a href="tel:10177" class="btn btn-outline-primary">10177</a>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Municipal Call Centre</strong>
                        <div class="small text-muted">General service enquiries</div>
                    </div>
                    <a href="tel:0800111111" class="btn btn-outline-primary">0800 111 111</a>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Electricity Faults</strong>
                        <div class="small text-muted">Report outages and faults</div>
                    </div>
                    <a href="tel:0860037566" class="btn btn-outline-primary">0860 037 566</a>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Water & Sanitation</strong>
                        <div class="small text-muted">Leaks, sanitation issues</div>
                    </div>
                    <a href="tel:0860103089" class="btn btn-outline-primary">0860 103 089</a>
                </div>
            </div>
        </div>
    </div>
</div>

